{
  "name": "tiendanube-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Tienda Nube API integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "tiendanube-mcp-server": "./start-mcp.js"
  },
  "files": [
    "dist/**/*",
    "start-mcp.js",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "node test-server.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PedroHSGuimaraes/--Tiendanube-mcp-server.git"
  },
